<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/failOverScreenHeaderMyVia"
  android:contentDescription="@string/misnapWorkflowFailoverFragmentDocumentAccessibilityMessage"
  android:importantForAccessibility="yes"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/timerIcon"
    android:tint="#FFFFFF"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:importantForAccessibility="no"
    android:scaleType="fitXY"
    app:layout_constraintBottom_toBottomOf="@id/timerMessage"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@id/timerMessage"
    app:srcCompat="@drawable/misnap_failover_timer_icon" />

  <com.google.android.material.textview.MaterialTextView
    android:id="@+id/timerMessage"
    style="@style/MiSnapTheme.TextAppearance.Headline.Medium"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginStart="8dp"
    android:text="@string/misnapWorkflowFailoverFragmentDocumentTimeoutMessage"
    android:importantForAccessibility="no"
    app:layout_constraintBottom_toTopOf="@id/failoverReasonsMessage"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/timerIcon"
    app:layout_constraintTop_toTopOf="parent" />

  <com.google.android.material.textview.MaterialTextView
    android:id="@+id/failoverReasonsMessage"
    style="@style/MiSnapTheme.TextAppearance.Headline.Medium"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="@string/misnapWorkflowFailoverFragmentDocumentFailureTipsMessage"
    android:importantForAccessibility="no"
    android:layout_marginTop="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/timerMessage" />
</androidx.constraintlayout.widget.ConstraintLayout>
